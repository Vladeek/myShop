<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="TextBoxes" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="SelectionBrush" Value="White" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="BorderBrush" Value="White" />
        <Setter Property="BorderThickness" Value="0,0,0,2" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="PasswordBoxes" TargetType="PasswordBox"
           BasedOn="{StaticResource MaterialDesignFloatingHintPasswordBox}">
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="SelectionBrush" Value="White" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="BorderBrush" Value="White" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="FontSize" Value="18" />
    </Style>
</ResourceDictionary>